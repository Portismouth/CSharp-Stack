@{
    ViewData["Title"] = "Home Page";
}
<h1>Lost in the Woods</h1>
<p>A list of local hiking trails</p>
<table class="table table-striped, table-bordered">
    <thead>
        <tr>
            <th>Trail Name</th>
            <th>Trail Length</th>
            <th>Trail Elevation Change</th>
        </tr>
    </thead>
@{
    foreach (var trail in @ViewBag.Trails)
    {
        <tbody>
            <tr>
                <td><a href="trail/@trail.Id">@trail.Name</a></td>
                <td>@trail.Length miles</td>
                <td>@trail.ElevationChange</td>
            </tr>
        </tbody>
    }
}
</table>
<a href="NewTrail" class="btn btn-info">Add a new trail!</a>