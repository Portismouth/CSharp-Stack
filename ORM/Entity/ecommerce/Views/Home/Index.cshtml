@{
    ViewData["Title"] = "Home Page";
}
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Flamaflon</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="#">Settings</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
    </div>
</nav>
<div class="container-fluid" style="margin-top: 75px">
    <div class="row">
        <div class="search col-md-2">
            <form action="/search">
                <div class="form-group">
                    <input type="search" placeholder="Search..." class="form-control" name="query">
                </div>
                <div class="form-group">
                    <button class="btn btn-info" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-9 main">
            <div class="row">
             @foreach(var product in @ViewBag.Products)
            {
                <div class="prod-display">
                    <a href="/"><img src="@product.ProductImage"></a>
                    <p>@product.ProductName</p>
                    <p>(@product.ProductInventory left)</p>
                </div>
            }
            <p class"show-more"><a href="/products">show more...</a></p>
            </div>
             <div class="row">
                <h3>Recent Orders</h3>
                        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    foreach (var order in @ViewBag.Orders)
                    {
                        <tr>
                            <td>@order.User.FirstName</td>
                            <td>@order.Product.ProductName</td>
                            <td>@order.Quantity</td>
                            <td>@order.Created_At.ToString("MMMM dd, yyyy")</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
            </div>
             <div class="row">
                <h3>New Customers</h3>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Date Joined</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @{
                            foreach (var customer in @ViewBag.Customers)
                            {
                                <tr>
                                    <td>@customer.FirstName</td>
                                    <td>@customer.Created_At.ToString("MMMM dd, yyyy")</td>
                                    <td>Action</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>