@{
    ViewData["Title"] = "Home Page";
}
@model ecommerce.Models.NewProduct
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Flamaflon</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/products">Products</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="#">Settings</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
    </div>
</nav>
<div class="container-fluid" style="margin-top: 75px">
    <div class="row">
        <div class="search col-md-2">
            <form action="/search">
                <div class="form-group">
                    <input type="search" placeholder="Search..." class="form-control" name="query">
                </div>
                <div class="form-group">
                    <button class="btn btn-info" type="submit">Search</button>
                </div>
            </form>
            <h4>Add a new product</h4>
            <form asp-action="AddProduct" asp-controller="Product" method="POST">
                <div class="form-group">
                    <label>Name: </label>
                    <input asp-for="ProductName" class="form-control">
                    <span asp-validation-for="ProductName"></span>
                </div>
                <div class="form-group">
                    <label>Price: </label>
                    <input asp-for="ProductPrice" class="form-control">
                    <span asp-validation-for="ProductPrice"></span>
                </div>
                <div class="form-group">
                    <label>Image (url): </label>
                    <input asp-for="ProductImage" placeholder="http://..." class="form-control">
                    <span asp-validation-for="ProductImage"></span>
                </div>
                <div class="form-group">
                    <label>Description: </label>
                    <textarea asp-for="ProductDescription" class="form-control"></textarea>
                    <span asp-validation-for="ProductDescription"></span>
                </div>
                <div class="form-group">
                    <label>Initial Inventory: </label>
                    <input asp-for="ProductInventory" class="form-control">
                    <span asp-validation-for="ProductInventory"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Add Product</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <div class="row">
            @foreach(var product in @ViewBag.Products)
            {
                <div class="prod-display">
                    <a href="/products/@product.ProductId"><img src="@product.ProductImage"></a>
                    <p>@product.ProductName</p>
                    <p>(@product.ProductInventory left)</p>
                </div>
            }
            </div>
        </div>
    </div>
</div>